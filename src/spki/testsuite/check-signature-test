    (hash sha1 |UNGhcpNFWg5UhtoV2yxV6wPMJPAB|)
    (public-key
     (rsa-pkcs1-sha1
      (e #11#)
      (n
       |AMC7wEqs+AjILPsUmS+R1PV9OihhqSTfmdLo9Y2hdj7+2f31qxXsMpx
